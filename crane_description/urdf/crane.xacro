<?xml version='1.0' encoding='utf-8'?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="crane">
    <link name="KingBot">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="2"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="${-pi/2} 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/KingBot.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </visual>
    </link>
    <link name="King">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="2"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="${-pi/2} 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/King.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </visual>
    </link>
    <joint name="joint_a1" type="revolute">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="KingBot"/>
      <child link="King"/>
      <axis xyz="0 0 1"/>
      <limit effort="0" lower="${radians(-185)}" upper="${radians(185)}" velocity="${radians(156)}"/>
    </joint>
  </xacro:macro>
</robot>