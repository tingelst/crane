<?xml version='1.0' encoding='utf-8'?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="crane">
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
    <material name="gray">
      <color rgba="0.5 0.5 0.5 1"/>
    </material>
    <material name="lessgray">
      <color rgba="0.75 0.75 0.75 1"/>
    </material>
    <link name="KingBot">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="2"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/KingBot.stl" />
        </geometry>
        <material name="gray"/>
      </visual>
    </link>
    <link name="King">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/King.stl" />
        </geometry>
        <material name="white"/>
      </visual>
    </link>
    <link name="Boom1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/Boom1.stl" />
        </geometry>
        <material name="white"/>
      </visual>
    </link>
    <link name="Boom2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/Boom2.stl" />
        </geometry>
        <material name="white"/>
      </visual>
    </link>
    <link name="Cyl1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/Cyl1.stl" />
        </geometry>
        <material name="gray"/>
      </visual>
    </link>
    <link name="Cyl2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/Cyl2.stl" />
        </geometry>
        <material name="gray"/>
      </visual>
    </link>
    <link name="Piston1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/Piston1.stl" />
        </geometry>
        <material name="lessgray"/>
      </visual>
    </link>
    <link name="Piston2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/Piston2.stl" />
        </geometry>
        <material name="lessgray"/>
      </visual>
    </link>


    <joint name="joint_1" type="revolute">
      <origin xyz="0 0 0.628" rpy="0 0 0"/>
      <parent link="KingBot"/>
      <child link="King"/>
      <axis xyz="0 0 1"/>
      <limit effort="0" lower="${radians(-185)}" upper="${radians(185)}" velocity="${radians(156)}"/>
    </joint>

    <joint name="joint_2" type="prismatic">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="Cyl1"/>
      <child link="Piston1"/>
      <axis xyz="1 0 0"/>
      <limit effort="0" lower="0" upper="0.1" velocity="${radians(156)}"/>
    </joint>

    <joint name="alpha_2" type="revolute">
      <origin xyz="0 0 0.706" rpy="0 0 0"/>
      <parent link="King"/>
      <child link="Boom1"/>
      <axis xyz="0 -1 0"/>
      <limit effort="0" lower="${radians(-90)}" upper="${0}" velocity="${radians(156)}"/>
    </joint>

    <joint name="beta_2" type="revolute">
      <origin xyz="0.154236 0 0.156" rpy="0 0 0"/>
      <parent link="King"/>
      <child link="Cyl1"/>
      <axis xyz="0 -1 0"/>
      <limit effort="0" lower="${radians(-90)}" upper="${0}" velocity="${radians(156)}"/>
    </joint>

    <joint name="joint_3" type="prismatic">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="Cyl2"/>
      <child link="Piston2"/>
      <axis xyz="1 0 0"/>
      <limit effort="0" lower="0" upper="0.1" velocity="${radians(156)}"/>
    </joint>

    <joint name="alpha_3" type="revolute">
      <origin xyz="1.468171 0 0.308337" rpy="0 0 0"/>
      <parent link="Boom1"/>
      <child link="Boom2"/>
      <axis xyz="0 -1 0"/>
      <limit effort="0" lower="${radians(-90)}" upper="${0}" velocity="${radians(156)}"/>
    </joint>

    <joint name="beta_3" type="revolute">
      <origin xyz="0.767068 0 0.002395" rpy="0 0 0"/>
      <parent link="Boom1"/>
      <child link="Cyl2"/>
      <axis xyz="0 -1 0"/>
      <limit effort="0" lower="${radians(-90)}" upper="${0}" velocity="${radians(156)}"/>
    </joint>


  </xacro:macro>
</robot>
