<?xml version='1.0' encoding='utf-8'?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="crane">

    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
    <material name="gray">
      <color rgba="0.5 0.5 0.5 1"/>
    </material>
    <material name="lessgray">
      <color rgba="0.75 0.75 0.75 1"/>
    </material>

    <link name="base_link"/>

    <joint name="fixed" type="fixed">
      <parent link="base_link"/>
      <child link="link1"/>
    </joint>

    <link name="link1">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="2"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/KingBot.stl" />
        </geometry>
        <material name="gray"/>
      </visual>
    </link>

    <link name="link2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/King.stl" />
        </geometry>
        <material name="white"/>
      </visual>
    </link>

    <link name="link3">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/Boom1.stl" />
        </geometry>
        <material name="white"/>
      </visual>
    </link>

    <link name="link4">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/Boom2.stl" />
        </geometry>
        <material name="white"/>
      </visual>
    </link>

    <link name="cylinder1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/Cyl1.stl" />
        </geometry>
        <material name="gray"/>
      </visual>
    </link>

    <link name="piston1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/Piston1.stl" />
        </geometry>
        <material name="lessgray"/>
      </visual>
    </link>

    <link name="cylinder2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/Cyl2.stl" />
        </geometry>
        <material name="gray"/>
      </visual>
    </link>

    <link name="piston2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://crane_description/meshes/visual/Piston2.stl" />
        </geometry>
        <material name="lessgray"/>
      </visual>
    </link> 

    <link name="tip_link"/>

    <joint name="joint1" type="revolute">
      <origin xyz="0 0 0.628" rpy="0 0 0"/>
      <parent link="link1"/>
      <child link="link2"/>
      <axis xyz="0 0 1"/>
      <limit effort="0" lower="${radians(-185)}" upper="${radians(185)}" velocity="${radians(156)}"/>
    </joint>

    <joint name="link2_cylinder1_joint" type="revolute">
      <origin xyz="0.154236 0 0.156" rpy="0 0 0"/>
      <parent link="link2"/>
      <child link="cylinder1"/>
      <axis xyz="0 -1 0"/>
      <limit effort="0" lower="${radians(-90)}" upper="${0}" velocity="${radians(156)}"/>
    </joint>

    <joint name="cylinder1_piston1_joint" type="prismatic">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="cylinder1"/>
      <child link="piston1"/>
      <axis xyz="1 0 0"/>
      <limit effort="0" lower="0" upper="0.1" velocity="${radians(156)}"/>
    </joint>

    <joint name="joint2" type="revolute">
      <origin xyz="0 0 0.706" rpy="0 0 0"/>
      <parent link="link2"/>
      <child link="link3"/>
      <axis xyz="0 -1 0"/>
      <limit effort="0" lower="${radians(-90)}" upper="${0}" velocity="${radians(156)}"/>
    </joint>

    <joint name="link3_cylinder2_joint" type="revolute">
      <origin xyz="0.75020 0 -0.160" rpy="0 0 0"/>
      <parent link="link3"/>
      <child link="cylinder2"/>
      <axis xyz="0 -1 0"/>
      <limit effort="0" lower="${radians(-90)}" upper="${0}" velocity="${radians(156)}"/>
    </joint> 

    <joint name="cylinder2_piston2_joint" type="prismatic">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="cylinder2"/>
      <child link="piston2"/>
      <axis xyz="1 0 0"/>
      <limit effort="0" lower="0" upper="0.1" velocity="${radians(156)}"/>
    </joint> 

    <joint name="joint3" type="revolute">
      <origin xyz="1.500199 0 0" rpy="0 0 0"/>
      <parent link="link3"/>
      <child link="link4"/>
      <axis xyz="0 -1 0"/>
      <limit effort="0" lower="${radians(-90)}" upper="${0}" velocity="${radians(156)}"/>
    </joint>

    <joint name="tip_joint" type="fixed">
      <origin xyz="0.963823 0 -0.642519" rpy="0 0 0"/>
      <parent link="link4"/>
      <child link="tip_link"/>
    </joint>



  </xacro:macro>
</robot>
