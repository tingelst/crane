<launch>
  <node pkg="nodelet" type="nodelet" name="camera_vision_nodelet_manager" args="manager" output="screen"/>

  <node pkg="nodelet" type="nodelet" name="camera0" args="load cv_camera/CvCameraNodelet camera_vision_nodelet_manager" output="screen">
    <param name="frame_id" value="camera0" />
    <param name="device_id" value="0" />
    <param name="image_width" value="1280"/>
    <param name="image_height" value="720"/>
    <param name="rate" value="30.0" />
  </node>

  <node pkg="nodelet" type="nodelet" name="camera1" args="load cv_camera/CvCameraNodelet camera_vision_nodelet_manager" output="screen">
    <param name="frame_id" value="camera1" />
    <param name="device_id" value="1" />
    <param name="image_width" value="1280"/>
    <param name="image_height" value="720"/>
    <param name="rate" value="30.0" />
  </node>

  <node pkg="nodelet" type="nodelet" name="crane_vision_nodelet" args="load crane_vision/CraneVisionNodelet crane_vision_nodelet_manager" output="screen">
  </node>

  <!-- <node pkg="nodelet" type="nodelet" name="Plus2" args="load nodelet_tutorial_math/Plus standalone_nodelet" output="screen">
    <rosparam file="$(find nodelet_tutorial_math)/plus_default.yaml"/>
  </node> -->
</launch>